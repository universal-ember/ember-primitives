{
  "extends": "@ember/app-tsconfig",
  "include": ["app", "tests", "types"],
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"]
  },
  "compilerOptions": {
    "skipLibCheck": true,
    "paths": {
      "test-app/tests/*": ["./tests/*"],
      "test-app/*": ["./app/*"],
      "*": ["./types/*"]
    },
    "types": ["ember-source/types", "@embroider/core/virtual"]
  }
}
